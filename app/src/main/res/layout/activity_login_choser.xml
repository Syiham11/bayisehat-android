<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="com.linkensky.bayisehat.activity.LoginChoserActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imageView4"
        android:src="@drawable/icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="-80dp"
        android:layout_marginBottom="-20dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:id="@+id/imageView5"
            android:layout_gravity="center_horizontal"

            android:src="@drawable/bayisehat_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Solusi Sehat Ibu dan Bayi"
            android:id="@+id/textView"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Ibu Hamil"
            android:layout_marginTop="50dp"
            android:id="@+id/bloginIbu"
            android:background="@color/colorPrimaryDark"
            android:drawableLeft="@drawable/active_dot"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Bayi dan Balita"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/bloginBayi"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/active_dot"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>
